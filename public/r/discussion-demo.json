      "content": "import { Avatar, AvatarFallback, AvatarImage } from \"@/components/ui/avatar\"\nimport { ScrollArea } from \"@/components/ui/scroll-area\"\nimport {\n  Discussion,\n  DiscussionBody,\n  DiscussionContent,\n  DiscussionExpand,\n  DiscussionItem,\n  DiscussionReplies,\n  DiscussionTitle,\n} from \"@/registry/molecule-ui/discussion\"\n\nexport function CommentTreeDemo() {\n  return (\n    <div className=\"w-full md:w-3/4\">\n      <ScrollArea className=\"max-h-[400px] overflow-auto\">\n        <Discussion\n          defaultValue={[\"item-1\"]}\n          type=\"multiple\"\n          className=\"w-full\"\n        >\n          <DiscussionItem value=\"item-1\">\n            <DiscussionContent className=\"gap-2\">\n              <div>\n                <Avatar>\n                  <AvatarImage src=\"https://randomuser.me/api/portraits/women/44.jpg\" />\n                  <AvatarFallback>MUI</AvatarFallback>\n                </Avatar>\n              </div>\n              <div className=\"flex flex-col gap-2\">\n                <div className=\"flex flex-col gap-1\">\n                  <DiscussionTitle className=\"flex gap-2 items-center\">\n                    <div>Jane Smith</div>\n                    <div className=\"text-muted-foreground text-xs \">\n                      @janesmith\n                    </div>\n                    <span className=\"text-muted-foreground text-xs\">•</span>\n                    <div className=\"text-muted-foreground text-xs \">\n                      1 hour ago\n                    </div>\n                  </DiscussionTitle>\n                  <DiscussionBody>\n                    This is a great article! Thanks for sharing your insights. I\n                    particularly enjoyed the section about accessibility best\n                    practices.\n                  </DiscussionBody>\n                </div>\n                <DiscussionExpand />\n              </div>\n            </DiscussionContent>\n            <DiscussionReplies>\n              <DiscussionItem value=\"item-1.1\">\n                <DiscussionContent className=\"gap-2\">\n                  <div>\n                    <Avatar>\n                      <AvatarImage src=\"https://randomuser.me/api/portraits/men/22.jpg\" />\n                      <AvatarFallback>MUI</AvatarFallback>\n                    </Avatar>\n                  </div>\n                  <div className=\"flex flex-col gap-2\">\n                    <div className=\"flex flex-col gap-1\">\n                      <DiscussionTitle className=\"flex gap-2 items-center\">\n                        <div>Liam Patel</div>\n                        <div className=\"text-muted-foreground text-xs \">\n                          @liampatel\n                        </div>\n                        <span className=\"text-muted-foreground text-xs\">•</span>\n                        <div className=\"text-muted-foreground text-xs \">\n                          34 minutes ago\n                        </div>\n                      </DiscussionTitle>\n                      <DiscussionBody>\n                        I agree! The examples were particularly helpful. Do you\n                        have any recommendations for further reading?\n                      </DiscussionBody>\n                    </div>\n                    <DiscussionExpand />\n                  </div>\n                </DiscussionContent>\n                <DiscussionReplies>\n                  <DiscussionItem value=\"item-1.1.1\">\n                    <DiscussionContent className=\"gap-2\">\n                      <div>\n                        <Avatar>\n                          <AvatarImage src=\"https://randomuser.me/api/portraits/women/68.jpg\" />\n                          <AvatarFallback>MUI</AvatarFallback>\n                        </Avatar>\n                      </div>\n                      <div className=\"flex flex-col gap-2\">\n                        <div className=\"flex flex-col gap-1\">\n                          <DiscussionTitle className=\"flex gap-2 items-center\">\n                            <div>Alex Chen</div>\n                            <div className=\"text-muted-foreground text-xs \">\n                              @alexchen\n                            </div>\n                            <span className=\"text-muted-foreground text-xs\">\n                              •\n                            </span>\n                            <div className=\"text-muted-foreground text-xs \">\n                              26 minutes ago\n                            </div>\n                          </DiscussionTitle>\n                          <DiscussionBody>\n                            Check out the MDN docs on ARIA - they're\n                            comprehensive and well-maintained.\n                          </DiscussionBody>\n                        </div>\n                      </div>\n                    </DiscussionContent>\n                  </DiscussionItem>\n                </DiscussionReplies>\n              </DiscussionItem>\n              <DiscussionItem value=\"item-1.2\">\n                <DiscussionContent className=\"gap-2\">\n                  <div>\n                    <Avatar>\n                      <AvatarImage src=\"https://randomuser.me/api/portraits/women/32.jpg\" />\n                      <AvatarFallback>MUI</AvatarFallback>\n                    </Avatar>\n                  </div>\n                  <div className=\"flex flex-col gap-2\">\n                    <div className=\"flex flex-col gap-1\">\n                      <DiscussionTitle className=\"flex gap-2 items-center\">\n                        <div>Sarah Wilson</div>\n                        <div className=\"text-muted-foreground text-xs \">\n                          @sarahwilson\n                        </div>\n                        <span className=\"text-muted-foreground text-xs\">•</span>\n                        <div className=\"text-muted-foreground text-xs \">\n                          14 minutes ago\n                        </div>\n                      </DiscussionTitle>\n                      <DiscussionBody>\n                        Thanks for the detailed explanation! This will\n                        definitely help with my current project.\n                      </DiscussionBody>\n                    </div>\n                  </div>\n                </DiscussionContent>\n              </DiscussionItem>\n            </DiscussionReplies>\n          </DiscussionItem>\n        </Discussion>\n      </ScrollArea>\n    </div>\n  )\n}\n",
