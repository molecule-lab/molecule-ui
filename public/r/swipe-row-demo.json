      "path": "registry/example/swipe-row-demo.tsx",
      "content": "import { Heart, Trash } from \"lucide-react\"\n\nimport { Avatar, AvatarFallback, AvatarImage } from \"@/components/ui/avatar\"\nimport {\n  SwipeLeftActions,\n  SwipeRightActions,\n  SwipeRow,\n  SwipeRowContent,\n} from \"@/registry/molecule-ui/swipe-row\"\n\nexport function SwipeRowDemo() {\n  return (\n    <div className=\"w-full md:w-2/3\">\n      <SwipeRow className=\"bg-muted rounded-md\">\n        <SwipeLeftActions>\n          <LeftActions />\n        </SwipeLeftActions>\n        <SwipeRowContent>\n          <div className=\"flex items-center gap-4\">\n            <div>\n              <Avatar>\n                <AvatarImage\n                  src=\"https://avatars.githubusercontent.com/u/1?v=4\"\n                  alt=\"MUI\"\n                />\n                <AvatarFallback>LM</AvatarFallback>\n              </Avatar>\n            </div>\n            <div>\n              <h3>Liam Patel</h3>\n              <p className=\"text-muted-foreground text-sm\">\n                Swipe to see actions\n              </p>\n            </div>\n          </div>\n        </SwipeRowContent>\n        <SwipeRightActions>\n          <RightActions />\n        </SwipeRightActions>\n      </SwipeRow>\n    </div>\n  )\n}\n\nfunction LeftActions() {\n  return (\n    <>\n      <button className=\"flex h-full items-center justify-center bg-blue-500 px-6 text-white transition-colors\">\n        <Heart size={20} />\n      </button>{\" \"}\n    </>\n  )\n}\n\nfunction RightActions() {\n  return (\n    <>\n      <button className=\"flex h-full items-center justify-center bg-red-500 px-6 text-white transition-colors\">\n        <Trash size={20} />\n      </button>\n    </>\n  )\n}\n",
      "type": "registry:ui",
      "target": "components/molecule-ui/example/swipe-row-demo.tsx"
    }
  ]
}